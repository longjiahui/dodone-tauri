{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dodone",
  "version": "1.0.5",
  "identifier": "fun.anfo.dodone",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "dodone",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "category": "Utility",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "./mas/entitlements.mas.plist",
      "files": {
        "embedded.provisionprofile": "./mas/dodonemasdistribute.provisionprofile"
      },
      "minimumSystemVersion": "12.0"
    }
  }
}
