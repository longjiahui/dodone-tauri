{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dodone",
  "version": "1.0.25",
  "identifier": "fun.anfo.dodone",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "dodone",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false
      }, {
        "label": "doing",
        "visible": false,
        "alwaysOnTop": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "url": "src/src-doing/index.html"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/image/**"]
      }
    }
  },
  "bundle": {
    "category": "Utility",
    "active": true,
    "targets": "all",
    "resources": [
      "../tauri-public/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "./mas/entitlements.mas.plist",
      "files": {
        "embedded.provisionprofile": "./mas/dodonemasdistribute.provisionprofile"
      },
      "minimumSystemVersion": "12.0"
    }
  }
}
